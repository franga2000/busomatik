<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_item_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:paddingTop="12dp"
    android:paddingEnd="10dp"
    android:background="?selectableItemBackground"
    android:paddingBottom="12dp">

    <include
        layout="@layout/template_route_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_weight="0" />

    <ImageView
        android:id="@+id/search_item_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_weight="0"
        android:tint="?android:textColor"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_directions_bus"
        tools:ignore="UseAppTint" />

    <TextView
        android:id="@+id/search_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal"
        android:layout_marginStart="32dp"
        android:layout_weight="4"
        android:textStyle="bold"
        tools:text="Bavarski dvor" />

    <TextView
        android:id="@+id/station_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/stretched_circle"
        android:backgroundTint="@android:color/holo_orange_light"
        android:elevation="2dp"
        android:fontFamily="sans-serif"
        android:padding="4dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="@string/into_center"
        android:textColor="?backgroundViewColor"
        android:textSize="12sp" />

</LinearLayout>