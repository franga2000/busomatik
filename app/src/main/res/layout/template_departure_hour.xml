<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/departure_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    app:cardBackgroundColor="?backgroundViewColor"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/departure_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="?containerBorderMargin"
            android:layout_marginStart="16dp"
            android:elevation="?elevation"
            android:orientation="horizontal"
            android:padding="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="?containerBorderPaddingSide"
                android:layout_marginTop="?containerBorderPadding"
                android:layout_marginEnd="?containerBorderPaddingSide"
                android:layout_marginBottom="?containerBorderPadding"
                android:background="@drawable/stretched_circle_container"
                android:padding="2dp">

                <TextView
                    android:id="@+id/departure_hour_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle"
                    android:backgroundTint="?departureHourColor"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="15"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textSize="18sp" />
            </FrameLayout>

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/departure_hour_minutes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="8dp"
                app:alignItems="flex_start"
                app:flexWrap="wrap" />

        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0"
            android:background="?dividerColor" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
