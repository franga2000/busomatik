<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorControlHighlight">@color/colorRipple</item>
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="backgroundViewColor">@color/color_main_background</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="containerBackground">@drawable/stretched_circle</item>
        <item name="containerBorderColor">@color/transparent</item>
        <item name="containerBorderMargin">3dp</item>
        <item name="containerBorderPadding">0dp</item>
        <item name="containerBorderPaddingSide">0dp</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="dividerColor">@color/light_gray</item>
        <item name="elevation">2dp</item>
    </style>

    <style name="WhiteTheme" parent="Theme.AppCompat.Light.NoActionBar.FullScreen"/>

    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar.FullScreen">
        <item name="backgroundViewColor">@color/color_main_background_dark</item>
        <item name="android:textColor">@color/color_text_dark</item>
        <item name="containerBackground">@drawable/stretched_circle</item>
        <item name="containerBorderColor">@color/light_gray_2</item>
        <item name="containerBorderMargin">0dp</item>
        <item name="containerBorderPadding">3dp</item>
        <item name="containerBorderPaddingSide">4dp</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColorHint">#ffA2A2A2</item>
        <item name="dividerColor">@color/divider_dark</item>
        <item name="android:windowBackground">@color/color_main_background_dark</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="robotoBoldTitle">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Alert Dialog -->
    <style name="AlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Background Color-->
        <item name="android:background">@color/color_main_background</item>
        <!-- Text Color for title and message -->
        <item name="colorOnSurface">@color/color_black</item>
        <item name="android:textColor">@color/color_black</item>
        <!-- Style for positive button -->
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <!-- Style for negative button -->
        <item name="buttonBarNegativeButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="PositiveButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <!-- text color for the button -->
        <item name="android:textColor">@color/colorAccent</item>
    </style>


</resources>
